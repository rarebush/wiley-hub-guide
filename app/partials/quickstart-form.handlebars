<button onclick='sendFormToEmail();' class="btn btn-primary btn-lg center-block">Email data <span class="glyphicon glyphicon-save" aria-hidden="true"></span></button>

{{!<div><span class="text-center center-block"><small>will not work on iOS</small></span></div>}}

<script>
    function sendFormToEmail() {
        var inputs = $('#quickstart :input').serializeArray();
        console.log(inputs);
        var bodyStr = "";
        jQuery.each(inputs, function (index, value) {
            var valueString = value.value.toString();
            valueString = valueString.replace("#", "");
            var nameString = value.name.toString();
            nameString = nameString.replace("qs", "");
            bodyStr += nameString + " = " + valueString + "%0D%0A";
        });

        window.location = "mailto:email?subject=subject&body=" + bodyStr;
    }
</script>